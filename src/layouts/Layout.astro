---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>

    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">

    <meta charset="UTF-8" />
    <meta name="description" content="Beautiful cottage retreat in the North Pennines" />
    <meta name="viewport" content="width=device-width" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content="A centuries old retreat in the North Pennines Area of Outstanding Natural Beauty" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://billyhar.github.io/old-cottage" /> <!-- Replace with your actual domain -->
    <meta property="og:image" content="/OG.jpg" /> <!-- Replace with your actual domain and preferred image -->
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content="A centuries old retreat in the North Pennines Area of Outstanding Natural Beauty" />
    <meta name="twitter:image" content="https://yourdomain.com/20240810_145033.webp" /> <!-- Replace with your actual domain and preferred image -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <nav class="fixed w-full z-50 bg-transparent">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-24">
          <div class="flex-shrink-0">
            <a href="/" class="text-gray-200 font-serif text-xl">The Old Cottage</a>
          </div>
          <div class="flex items-center text-slate-300 backdrop-blur-md hover:bg-slate-800 rounded-lg">
            <a 
              href="#contact" 
              class="text-white text-slate-300 hover:text-gray-200 px-3 py-2 rounded-md text-sm font-medium transition-colors"
            >
              Contact us to book
            </a>
          </div>
        </div>
      </div>
    </nav>
    <slot />
  </body>
</html>